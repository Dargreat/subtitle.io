{
  "version": 2,
  "build": {
    "command": "echo 'No build needed'",
    "output": "public",  // Points to your static files directory
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "api/generate/route.js": {
      "runtime": "edge"
    }
  },
  "routes": [
    {
      "src": "/api/generate",
      "dest": "/api/generate/route.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"  // Serves from public directory
    }
  ]
}
